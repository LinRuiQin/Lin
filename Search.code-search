          <td>${product.weight}</td>
          <td>${product.weightType}</td>
          <td>${product.note || '-'}</td>
          <td>
            <button class="action-btn edit-btn" onclick="editProduct(${product.id})">
              <i class="fas fa-edit"></i> 编辑
            </button>
            <button class="action-btn delete-btn" onclick="deleteProduct(${product.id})">
              <i class="fas fa-trash"></i> 删除
            </button>
          </td>
        `;
        
        tableBody.appendChild(row);
      });
      
      // 更新分页信息
      const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
      pageInfo.textContent = `第 ${currentPage} 页 / 共 ${totalPages} 页`;
      
      // 更新按钮状态
      prevPageButton.disabled = currentPage === 1;
      nextPageButton.disabled = currentPage === totalPages || totalPages === 0;
    }
    
    // 切换页面
    function changePage(direction) {
      const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
      
      if (direction === 1 && currentPage < totalPages) {
        currentPage++;
      } else if (direction === -1 && currentPage > 1) {
        currentPage--;
      }
      
      renderTable();
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    // 处理图片加载错误
    function handleImageError(img) {
      img.onerror = null;
      img.style.display = 'none';
      const placeholder = document.createElement('div');
      placeholder.className = 'img-placeholder';
      placeholder.textContent = '图片加载失败';
      img.parentElement.appendChild(placeholder);
      img.parentElement.style.cursor = 'default';
      img.parentElement.onclick = null;
    }
    
    // 打开图片模态框
    function openModal(src, productId) {
      // 获取所有产品图片
      imageList = filteredProducts.map(p => p.image);
      currentImageIndex = imageList.indexOf(src);
      
      if (currentImageIndex === -1) {
        currentImageIndex = 0;
      }
      
      const modal = document.getElementById('imageModal');
      const expandedImg = document.getElementById('expandedImg');
      
      expandedImg.src = imageList[currentImageIndex];
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    
    // 切换图片
    function changeImage(direction) {
      currentImageIndex += direction;
      
      if (currentImageIndex < 0) {
        currentImageIndex = imageList.length - 1;
      } else if (currentImageIndex >= imageList.length) {
        currentImageIndex = 0;
      }
      
      document.getElementById('expandedImg').src = imageList[currentImageIndex];
    }
    
    // 关闭模态框
    function closeModal() {
      const modal = document.getElementById('imageModal');
      modal.classList.remove('active');
      document.body.style.overflow = 'auto';
    }
    
    // 打开添加商品模态框
    function openAddModal() {
      formTitle.textContent = '添加新商品';
      currentEditId = null;
      resetForm();
      formModal.classList.add('active');
    }
    
    // 打开编辑商品模态框
    function editProduct(productId) {
      const product = products.find(p => p.id === productId);
      if (!product) return;
      
      formTitle.textContent = '编辑商品';
      currentEditId = productId;
      
      // 填充表单
      document.getElementById('productId').value = product.id;
      document.getElementById('factoryCode').value = product.factoryCode;
      document.getElementById('factoryName').value = product.factoryName;
      document.getElementById('name').value = product.name;
      document.getElementById('model').value = product.model;
      document.getElementById('image').value = product.image;
      document.getElementById('spec').value = product.spec;
      document.getElementById('process').value = product.process;
      document.getElementById('weight').value = product.weight;
      document.getElementById('weightType').value = product.weightType;
      document.getElementById('note').value = product.note || '';
      
      formModal.classList.add('active');
    }
    
    // 重置表单
    function resetForm() {
      document.getElementById('productId').value = '';
      document.getElementById('factoryCode').value = '';
      document.getElementById('factoryName').value = '';
      document.getElementById('name').value = '';
      document.getElementById('model').value = '';
      document.getElementById('image').value = '';
      document.getElementById('spec').value = '';
      document.getElementById('process').value = '';
      document.getElementById('weight').value = '';
      document.getElementById('weightType').value = '按件';
      document.getElementById('note').value = '';
    }
    
    // 关闭表单模态框
    function closeFormModal() {
      formModal.classList.remove('active');
    }
    
    // 处理表单提交
    function handleFormSubmit(e) {
      e.preventDefault();
      
      const formData = {
        factoryCode: parseInt(document.getElementById('factoryCode').value),
        factoryName: document.getElementById('factoryName').value,
        name: document.getElementById('name').value,
        model: document.getElementById('model').value,
        image: document.getElementById('image').value,
        spec: document.getElementById('spec').value,
        process: document.getElementById('process').value,
        weight: parseFloat(document.getElementById('weight').value),
        weightType: document.getElementById('weightType').value,
        note: document.getElementById('note').value || '-'
      };
      
      if (currentEditId) {
        // 编辑现有商品
        const index = products.findIndex(p => p.id === currentEditId);
        if (index !== -1) {
          products[index] = { ...products[index], ...formData };
          showNotification('商品信息已更新！', 'success');
        }
      } else {
        // 添加新商品
        const newId = Math.max(...products.map(p => p.id), 0) + 1;
        const newProduct = { id: newId, ...formData };
        products.push(newProduct);
        showNotification('商品添加成功！', 'success');
      }
      
      // 关键修复：更新过滤后的产品列表
      filterProducts();
      updateProductCount();
      updateLastUpdated();
      updateInfoPanel();
      closeFormModal();
    }
    
    // 删除产品
    function deleteProduct(productId) {
      if (!confirm('确定要删除这个产品吗？此操作不可撤销。')) return;
      
      const index = products.findIndex(p => p.id === productId);
      if (index !== -1) {
        products.splice(index, 1);
        updateProductCount();
        updateLastUpdated();
        updateInfoPanel();
        filterProducts();
        showNotification('商品已删除！', 'success');
      }
    }
    
    // 显示通知
    function showNotification(message, type) {
      const notification = document.createElement('div');
      notification.className = `notification ${type}`;
      notification.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}`;
      
      document.body.appendChild(notification);
      
      // 显示通知
      setTimeout(() => {
        notification.classList.add('show');
      }, 10);
      
      // 3秒后移除通知
      setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => {
          notification.remove();
        }, 400);
      }, 3000);
    }
    
    // 按ESC键关闭模态框
    document.addEventListener('keydown', function(event) {
      const imageModal = document.getElementById('imageModal');
      if (event.key === 'Escape' && imageModal.classList.contains('active')) {
        closeModal();
      }
      
      const formModal = document.getElementById('productFormModal');
      if (event.key === 'Escape' && formModal.classList.contains('active')) {
        closeFormModal();
      }
    });
  </script>
</body>
</html>