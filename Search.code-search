    // 初始化
    document.addEventListener('DOMContentLoaded', () => {
      updateProductCount();
      updateLastUpdated();
      updateInfoPanel();
      renderTable();
      setupEventListeners();
    });
    
    // 设置事件监听器
    function setupEventListeners() {
      searchButton.addEventListener('click', filterProducts);
      searchInput.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') filterProducts();
      });
      
      factoryFilter.addEventListener('change', filterProducts);
      processFilter.addEventListener('change', filterProducts);
      sortSelect.addEventListener('change', filterProducts);
      
      prevPageButton.addEventListener('click', () => changePage(-1));
      nextPageButton.addEventListener('click', () => changePage(1));
      
      productForm.addEventListener('submit', handleFormSubmit);
    }
    
    // 更新商品总数
    function updateProductCount() {
      const total = products.length;
      totalProductsElement.textContent = total.toLocaleString();
      footerTotalElement.textContent = total.toLocaleString();
    }
    
    // 更新信息面板
    function updateInfoPanel() {
      document.getElementById('todayAdded').textContent = Math.floor(Math.random() * 30 + 5);
      document.getElementById('totalStock').textContent = (products.length * 3.5).toFixed(0);
      document.getElementById('activeFactories').textContent = Math.floor(Math.random() * 15 + 8);
      document.getElementById('monthSales').textContent = Math.floor(Math.random() * 1500 + 800);
    }
    
    // 更新最后更新时间
    function updateLastUpdated() {
      const now = new Date();
      const formattedDate = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}-${String(now.getDate()).padStart(2, '0')}`;
      lastUpdatedElement.textContent = formattedDate;
    }
    
    // 过滤和排序产品
    function filterProducts() {
      const searchTerm = searchInput.value.toLowerCase();
      const factory = factoryFilter.value;
      const process = processFilter.value;
      const sortBy = sortSelect.value;
      
      filteredProducts = products.filter(product => {
        const matchesSearch = 
          product.name.toLowerCase().includes(searchTerm) ||
          product.model.toLowerCase().includes(searchTerm) ||
          product.factoryName.toLowerCase().includes(searchTerm);
        
        const matchesFactory = factory ? product.factoryName === factory : true;
        const matchesProcess = process ? product.process === process : true;
        
        return matchesSearch && matchesFactory && matchesProcess;
      });
      
      // 排序
      switch(sortBy) {
        case 'weight_asc':
          filteredProducts.sort((a, b) => parseFloat(a.weight) - parseFloat(b.weight));
          break;
        case 'weight_desc':
          filteredProducts.sort((a, b) => parseFloat(b.weight) - parseFloat(a.weight));
          break;
        case 'name_asc':
          filteredProducts.sort((a, b) => a.name.localeCompare(b.name));
          break;
        case 'name_desc':
          filteredProducts.sort((a, b) => b.name.localeCompare(a.name));
          break;
        default:
          // 默认排序（按ID）
          filteredProducts.sort((a, b) => a.id - b.id);
      }
      
      currentPage = 1;
      renderTable();
    }
    
